{
  "name": "nest-ms",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "nest start",
    "start:prod": "node dist/apps/auth/main",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:format": "prisma format",
    "db:validate": "prisma validate",
    "db:migrate:prod": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev --skip-seed",
    "biome:format:check": "pnpm dlx @biomejs/biome format .",
    "biome:format:fix": "pnpm dlx @biomejs/biome format --write .",
    "biome:lint:check": "pnpm dlx @biomejs/biome lint .",
    "biome:lint:fix": "pnpm dlx @biomejs/biome lint --apply .",
    "lint": "pnpm run biome:format:check && pnpm run biome:lint:check && pnpm run db:validate",
    "lint:fix": "pnpm run biome:format:fix && pnpm run biome:lint:fix && pnpm run db:format",
    "clean": "pnpm dlx shx rm -rf dist",
    "clean:hard": "pnpm dlx shx rm -rf node_modules pnpm-lock.yaml dist \"logs/**/*\"",
    "compose": "docker compose --project-name \"nest-ms\" up --remove-orphans --build --force-recreate"
  },
  "dependencies": {
    "@nestjs/cache-manager": "2.2.2",
    "@nestjs/cli": "10.3.2",
    "@nestjs/common": "10.3.7",
    "@nestjs/config": "3.2.1",
    "@nestjs/core": "10.3.7",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/microservices": "10.3.7",
    "@nestjs/platform-express": "10.3.7",
    "@nestjs/schematics": "10.1.1",
    "@prisma/client": "5.12.0",
    "@types/express": "4.17.21",
    "@types/node": "20.12.4",
    "argon2": "0.40.1",
    "cache-manager": "5.5.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "express": "4.19.2",
    "nestjs-pino": "4.0.0",
    "pino-http": "9.0.0",
    "pino-pretty": "11.0.0",
    "prisma": "5.12.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "ts-loader": "9.5.1",
    "typescript": "5.4.3"
  },
  "engines": {
    "node": "20"
  }
}
