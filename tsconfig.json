{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "libs/types": ["libs/types/src"],
      "libs/types/*": ["libs/types/src/*"],
      "libs/prisma": ["libs/prisma/src"],
      "libs/prisma/*": ["libs/prisma/src/*"],
      "libs/utils": ["libs/utils/src"],
      "libs/utils/*": ["libs/utils/src/*"],
      "libs/events": ["libs/events/src"],
      "libs/events/*": ["libs/events/src/*"],
      "libs/validators": ["libs/validators/src"],
      "libs/validators/*": ["libs/validators/src/*"],
      "libs/dtos": ["libs/dtos/src"],
      "libs/dtos/*": ["libs/dtos/src/*"],
      "libs/guards": ["libs/guards/src"],
      "libs/guards/*": ["libs/guards/src/*"]
    }
  }
}
